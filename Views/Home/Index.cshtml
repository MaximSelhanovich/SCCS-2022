@{
    ViewData["Title"] = "Index";
}
<h2>@ViewData["Text"]</h2>
<br>
<h3>Список</h3>
<ol type="A">
    @for (int i = 1; i < 5; i++)
    {
        <li>элемент @i списка</li>
    }
</ol>
<hr>
<form>
    <h3>Форма</h3>
    <select asp-items="@ViewData["Lst"] as SelectList"></select><br>
    <input type="checkbox" id="checkbox1" name="checkbox1" value="CBVal1">
    <label for="checkbox1">Чек-бокс 1</label><br>
    <input type="checkbox" id="checkbox2" name="checkbox2" value="CBVal2">
    <label for="checkbox2">Чек-бокс 2</label><br><br>
    <input type="radio" id="rval1" name="test_radio" value="RVal1">
    <label for="rval1">Радио-1</label>
    <input type="radio" id="rval2" name="test_radio" value="RVal2">
    <label for="rval2">Радио-2</label>
    <input type="radio" id="rval3" name="test_radio" value="RVal3">
    <label for="rval3">Радио-3</label><br><br>
    <div class="form-group row">
        <label for="input_login" class="col-sm-2 col-form-label">Логин:</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" name="login" id="input_login" placeholder="Введите имя">
        </div>
    </div>
    <div class="form-group row">
        <label for="input_password" class="col-sm-2 col-form-label">Пароль</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" name="pswd" id="input_password" placeholder="Введите пароль"><br>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Отправить</button>
</form>